<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Error state -->
    <item android:state_enabled="false" android:color="@color/grey" />
    <!-- Focused state -->
    <item android:state_focused="true" android:color="@color/red" />
    <!-- Activated state (when field has content) -->
    <item android:state_activated="true" android:color="@color/black" />
    <!-- Default/idle state -->
    <item android:color="@color/black" />
